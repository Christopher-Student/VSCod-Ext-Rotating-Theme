{
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "name": "rotating-theme",
  "displayName": "Rotating Theme",
  "description": "An extension that rotates your IDE theme",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other",
    "onCommand:rotatingTheme.start",
    "onCommand:rotatingTheme.stop",
    "onCommand:rotatingTheme.nextNow"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rotatingTheme.start",
        "title": "Rotating Theme: Start"
      },
      {
        "command": "rotatingTheme.stop",
        "title": "Rotating Theme: Stop"
      },
      {
        "command": "rotatingTheme.nextNow",
        "title": "Rotating Theme: Next Now"
      }
    ],
    "configuration": {
      "title": "Rotating Theme (Palette Fader)",
      "properties": {
        "rotatingTheme.themeFolder": {
          "type": "string",
          "default": "",
          "description": "Absolute path to a folder containing JSON palette files. Files are read and rotated in alphabetical order."
        },
        "rotatingTheme.transitionDurationMs": {
          "type": "number",
          "default": 1500,
          "minimum": 100,
          "description": "How long to fade from one palette to the next (milliseconds)."
        },
        "rotatingTheme.transitionSteps": {
          "type": "integer",
          "default": 30,
          "minimum": 2,
          "maximum": 200,
          "description": "Number of steps within each fade. More steps = smoother but more updates."
        },
        "rotatingTheme.dwellMs": {
          "type": "number",
          "default": 4000,
          "minimum": 0,
          "description": "How long to sit on a palette before starting the next fade (milliseconds)."
        },
        "rotatingTheme.keysWhitelist": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Optional list of color keys to animate (e.g. [\"activityBar.background\", \"editor.background\"]). Leave empty to animate all keys found."
        },
        "rotatingTheme.skipEditorColors": {
          "type": "boolean",
          "default": true,
          "description": "If true, ignores all editor.* colors so syntax highlighting is not overridden."
        }
      }
    },
    "devDependencies": {
      "@types/vscode": "^1.102.0",
      "@types/node": "^22.x",
      "@types/mocha": "^10.0.10",
      "typescript": "^5.9.2",
      "eslint": "^9.32.0",
      "@typescript-eslint/parser": "^8.39.0",
      "@typescript-eslint/eslint-plugin": "^8.39.0",
      "@vscode/test-electron": "^2.5.2"
    }
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.0",
    "@types/vscode": "^1.103.0"
  },
  "repository": {
  "type": "git",
  "url": "https://github.com/yourusername/rotating-theme.git"
}

}
